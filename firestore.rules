rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Global Settings
    // Allow read to everyone (so the logo loads)
    // Allow write ONLY to authenticated users (admins)
    match /config/global_settings {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 2. Booklets
    match /booklets/{bookletId} {
      // Public can view booklets
      allow read: if true;
      
      // Only logged-in users can create new booklets
      allow create: if request.auth != null;
      
      // DELETE: Only the owner can delete
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
      
      // UPDATE: This is the tricky part!
      allow update: if 
        // Option A: You are the owner (you can edit title, PDF, etc.)
        (request.auth != null && request.auth.uid == resource.data.ownerId) 
        ||
        // Option B: You are a public user JUST incrementing the view count
        // (This checks that you are ONLY touching the 'stats' field and nothing else)
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stats']));
    }
  }
}